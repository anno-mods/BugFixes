    <Item>
      <Context>112653</Context>
    </Item>
  </ModOp>
  <ModOp Type="add" GUID="111251" Condition="!/Values/NewspaperArticle/ArticleEffects/Item[ArticleEffect='Workforce']/ContextGuids[Item/Context='112654']" Path="/Values/NewspaperArticle/ArticleEffects/Item[ArticleEffect='Workforce']/ContextGuids">
    <Item>
      <Context>112654</Context>
    </Item>
  </ModOp>
  <ModOp Type="add" GUID="111251" Condition="!/Values/NewspaperArticle/ArticleEffects/Item[ArticleEffect='Workforce']/ContextGuids[Item/Context='5406']" Path="/Values/NewspaperArticle/ArticleEffects/Item[ArticleEffect='Workforce']/ContextGuids">
    <Item>
      <Context>5406</Context>
    </Item>
  </ModOp>
  
  <!-- make newspaper also active in arctic, vanilla: Moderate;Colony01;Africa (Mod regions should add themself to this) -->
