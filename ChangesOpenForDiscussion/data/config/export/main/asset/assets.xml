      <Second_ai_11_Mercier>
        <allowIncidents>1</allowIncidents>
      </Second_ai_11_Mercier>
    </ModOp>
  
  
  <!-- add arctic workforce and 3rd workforce from new world to the workforce newspaper buff -->
  <!-- if same workforce is added multiple times, the effect is done multiple times, so make sure its only once -->
